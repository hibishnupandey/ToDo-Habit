<h1>Edit ToDo Item</h1>

<div id="user_form">
<%= form_for(@item) do |f| %>
  <%= f.error_messages %>

 <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :due_date %>
    <%= f.text_field :due_date %>
  </p>
    <p>
    <%= f.label :status %>
    <%= f.select :status, Global::STATUS_LIST.sort.collect { |c| [ c, c ] },{:prompt => 'Select'}, {:style=>'width:220px'}  %>
  </p>
  <p>
    <%= f.submit "Update", :class=>"submit_button" %>
  </p>
<% end %>
</div>
<%= link_to 'Back', items_path %>
